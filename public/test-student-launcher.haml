!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/xhtml; charset=utf-8", "http-equiv" => "content-type" }
    %title
      testing student workgroup selection
    %meta{ :content => "no", "http-equiv" => "imagetoolbar" }
    %meta{ :name => "distribution", :content => "all" }
    %meta{ :name => "robots", :content => "all" }
    %meta{ :name => "resource-type", :content => "document" }
    %meta{ :name => "MSSmartTagsPreventParsing", :content => "true" }
    %link{ :href => "/images/favicon.ico", :rel => "shortcut icon"}/
    %link{ :href => "/stylesheets/app.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{ :href => "/stylesheets/workgroup.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %script{ :src=> "/javascripts/prototype.js", :type => "text/javascript"}
    %script{ :src=> "/javascripts/student_workgroup.js", :type => "text/javascript"}

  %body

    #note{:style=>"display: none;"}
    #waiter{:style=>"display: none;"}
      please wait
    #page
    #wrapper.wrapper
      #primary
        #content.main_content_colors
          #content_header.main_content_colors
            .padded_content
              %div
                %button{:style => 'display: inline-block;'} run
                the activity now, or add more collaborators below.
              %br
              #add_group{:style => "display: none;"}
                %h3 add colaborators
                %select#learners_dropdown
                %button#add_button
                  add
              #learners_container{:style => "display: none;"}
                %h3 existing colaborators:
                %ul#learners_list
              #password_panel{:style => "display: none;"}
                %span#login_user_name
                  user name
                %br
                %span
                  password:
                %input#password_field{:type => 'password'}
                  %button#login_button
                    I am here
      #secondary
      #under_footer
