- form_for(@page) do |f|
  = f.error_messages
  = f.hidden_field 'section_id', :value =>@page.section.id
  = edit_menu_for(@page, f)
  - field_set_tag 'Page Name' do
    = f.text_field :name
  - if current_user.has_role?('admin','manager')
    %h3 grade level:
    = grade_level_select(:page)
    %h3 subject area:
    = subject_area_select(:page)
    %h3 unit:
    = unit_select(:page)
    %h3 publication status
    = f.select :publication_status, ['published', 'private', 'draft']
    = render :partial => 'shared/cohorts_edit', :locals => { :object => @page }
= javascript_tag("focus_first_field();");
