!!! Strict
%html{ :lang => "en" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }
    %title
      HAS Template
    %style{ :type => "text/css" }
      body {
      background-color: #466D5F;
      font-family: Arial, sans-serif;
      }
      
      a:link {
      color: #6B462B;
      }
      
      a:visited {
      color: #AF8850;
      }
      
      a:hover {
      background-color: #223B3B;
      color: #ffffff;
      }
      
      strong.nav-selected {
      color: #223B3B;
      }
      
      \#logo {
      text-align: center;
      margin-bottom: 20px;
      }
      
      \#container {
      width: 890px;
      margin: 20px auto 20px auto;
      background-color: #ffffff;
      border: 5px solid #223B3B;
      }
      
      \#content {
      padding: 15px;
      }
      
      \#navigation a {
      text-decoration: none;
      }
      
      \#navigation ul {
      list-style-type: none;
      padding: 0px;
      margin: 15px 0px 0px 10px;
      }
      
      \#navigation ul li {
      font-size: 1.5em;
      font-weight: bold;
      text-transform: uppercase;
      padding: 3px;
      margin: 5px;
      display: inline;
      }
      
      h1,h2,h3,h4,h5,h6 {
      color: #223B3B;
      }
      
      h1 {
      font-size: 2em;
      margin-top: 15px;;
      }
      
      img {
      border: 0px;
      }
      
      \.right-float {
      float: right;
      margin: 0px 0px 15px 15px;
      }
      
      \#copyright {
      text-align: center;
      width: 75%;
      font-size: 0.8em;
      margin: auto;
      }
