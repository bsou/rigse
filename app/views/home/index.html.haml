= render :partial => "notice"

- role_partials = current_user.roles.map{|role| role.title}
- if @portal_teacher
  - role_partials << "teacher"
- if @portal_student
  - role_partials << "student"

/ reorder author to the end
- if role_partials.delete("author")
  - role_partials << "author"

- current_user.roles.each do |role|
  = render :partial => role.title
