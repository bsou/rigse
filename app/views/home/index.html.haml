- current_user.roles.each do |role|
  = render :partial => role.title

- if @portal_teacher
  = render :partial => "teacher"
  
- if @portal_student
  = render :partial => "student"

= yield :authored_investigations

- unless current_user.resource_pages.blank?
  - field_set_tag "#{ResourcePage.display_name.pluralize} you've authored" do
    %ul
      - current_user.resource_pages.each do |resource_page|
        %li
          = link_to resource_page.display_name, resource_page