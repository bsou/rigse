= form_tag '', :id => 'new-account-form' do
  = field_set_tag nil, id: 'common-fieldset' do
    %p= text_field_tag :first_name, nil, placeholder: 'First Name'
    %p= text_field_tag :last_name, nil, placeholder: 'Last Name'
    %p
      %span
        I am a
        = radio_button_tag :account_type, 'student', true, id: 'student_account'
        = label_tag :student_account, ' Student'
        = radio_button_tag :account_type, 'teacher', false, id: 'teacher_account'
        = label_tag :teacher_account, ' Teacher'
    %p= password_field_tag :password, nil, placeholder: 'Password'
    %p= password_field_tag :password_confirmation, nil, placeholder: 'Password Again'

    %p
      %button#continue-registration Sign Up for High Adventure Science!

  = field_set_tag nil, id: 'student-fieldset', class: 'hidden' do
    -# students section
    - if current_project.allow_default_class
      %p
        = hidden_field_tag :class_word, Portal::Clazz.default_class.class_word
    - else
      %p
        = text_field_tag :class_word, nil, placeholder: 'Class Word (not case sensitive)'

    - if current_project.use_student_security_questions
      %p
        Please select three questions from the menus below.
      %p
        If you forget your password, you will need to answer these questions correctly in order to receive a new one.
      %p
        = select_tag 'questions[]', nil
      %p
        = text_field_tag 'answers[]', nil, placeholder: 'Answer'
      %p
        = select_tag 'questions[]', nil
      %p
        = text_field_tag 'answers[]', nil, placeholder: 'Answer'
      %p
        = select_tag 'questions[]', nil
      %p
        = text_field_tag 'answers[]', nil, placeholder: 'Answer'
      %p
        = hidden_field_tag :over_18, false
        = check_box_tag :over_18, true
        I am 18 years old or older
    %p
      = submit_tag 'Submit', id: 'submit-form'
