%p
  = link_to 'back to Users list', users_path

= form_for @user do |form|
  .action_menu
    .action_menu_header
      .action_menu_header_right
        %ul.menu
          %li
            = submit_tag 'Save'
          %li
            = submit_tag 'Cancel'

  .item
    .content
      = form.error_messages
      = render :partial => 'form', :locals => { :f => form }
      - if current_visitor.has_role?("admin", "manager")
        = render :partial => 'roles', :locals => { :f => form, :roles => @roles }
        = render :partial => 'admin_for_projects', :locals => { :f => form, :projects => @projects }
      - if current_visitor.has_role?("admin", "manager")
        = render :partial => 'researcher_for_projects', :locals => { :f => form, :projects => @projects }
      - elsif current_visitor.is_project_admin?
        = render :partial => 'researcher_for_projects', :locals => { :f => form, :projects => current_visitor.admin_for_projects }
      - if current_visitor.has_role?("admin", "manager")
        = render :partial => 'member_of_projects', :locals => { :f => form, :projects => @projects }
      = render :partial => 'shared/cohorts_edit', :locals => { :object => @user.portal_teacher, :field_set_title => 'Teacher Cohorts' }
      = render :partial => 'shared/vendor_interface', :locals => { :f => form, :vendor_interface => @user.vendor_interface }
