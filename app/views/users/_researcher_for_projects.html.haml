= hidden_field(:user, :has_projects_in_form, :value => true)
%fieldset
  %legend
    Researcher for Projects
  %ul.options-list
    - projects = projects.sort_by &:name
    - projects.each do |p|
      %li
        = check_box_tag "user[researcher_project_ids][]", p.id, @user.researcher_for_projects.include?(p)
        %label
          = p.name
