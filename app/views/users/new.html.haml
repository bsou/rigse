= title "Rites: Sign up!"
- @new_user.password = @new_user.password_confirmation = nil
- form_for @new_user do |form|
  %div{:id => dom_id_for(@new_user,:form), :class =>"action_menu"}       
    .action_menu
      .action_menu_header_left
        .padded_content
          %h3 Signup
      .action_menu_header_right
        %ul.menu
          %li= submit_tag 'Sign up'          
  = form.error_messages
  = render :partial => 'user', :locals => { :f => form }
  = render :partial => 'password', :locals => { :f => form }

 