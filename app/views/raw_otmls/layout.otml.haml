!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @raw_otml.uuid}
  =ot_imports
  %objects
    %OTSystem
      =ot_bundles(:title => @raw_otml.name)
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = RawOtml.display_name + ': ' + @raw_otml.name
              %object{ :refid => ot_refid_for(@raw_otml) }
      %library
        =yield :layout