- template_form(section) do |f|
  -#= edit_menu_for(section, f)
  = f.submit("Save", :class=> "template_save_button")
  = f.submit("Cancel", :class=> "template_cancel_button")
  - field_set_tag 'content' do
    = f.text_area :content, :id => dom_id_for(section, :item, :content, :textarea), :class => 'tinymce_textarea'
  - if section.has_question
    %h3 default response:
    - field_set_tag 'Default response' do
      = f.text_field :default_response, :size => 80, :id => dom_id_for(section, :item, :default_response_field)
    %br
