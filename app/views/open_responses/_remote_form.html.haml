- remote_form_for(open_response, :update => dom_id_for(open_response, :item), :before =>  "tinyMCE.triggerSave(true,true)") do |f|
  = edit_menu_for_component(open_response, f)
  .content
    %p
      - field_set_tag 'Prompt' do
        = f.text_area :prompt, :id => dom_id_for(open_response, :item, :prompt, :textarea), :class => 'tinymce_textarea'
      - field_set_tag 'Default response' do
        = f.text_field :default_response, :size => 80
