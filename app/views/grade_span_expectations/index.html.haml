%h1 Grade Span Expectations
- content_for(:left_content_header) do
  %ul
    - if RAILS_ENV == "development"
      %li
        - form_tag reparse_gses_grade_span_expectations_path, :method => :put do
          %input{ :type => "submit", :value => "Re-parse orginal RI-GSE documents"}

- content_for(:right_content_header) do
  %ul
    %li
      - form_tag url_for(:action => "index", :page => session[:page] || 1 ), :method => 'get' do
        Grade Span: 
        / - %w{LS ESS PS}.each do |domain|
        /   %label{:for => domain}
        /   = domain
        /   = check_box_tag domain, domain, true
        - content_tag :label do
          = text_field_tag :search, params[:search], :size => 10
        %input{ :type => "submit", :value => "Search"}

= will_paginate @grade_span_expectations
.item_collection
  %ul.item_list
    -  for grade_span_expectation in @grade_span_expectations do
      - assessment_target = grade_span_expectation.assessment_target
      .item
        .menu
          %ul
            %li
              Grade Span: 
              = grade_span_expectation.grade_span
              ,
            %li
              Assessment Target: 
              number:
              = assessment_target.number
              ,
              grade span:
              = assessment_target.grade_span
        .content
          %dl
            %dt Unifying Theme
            %dd
              = assessment_target.unifying_theme ? assessment_target.unifying_theme.name : "null"
            %dt Big Ideas
            %dd
              - if assessment_target.unifying_theme
                - for big_idea in assessment_target.unifying_theme.big_ideas do
                  = big_idea ? "#{big_idea.description}; " : "null"
            %dt Knowledge Statement
            %dd
              = assessment_target.knowledge_statement ? assessment_target.knowledge_statement.description : "null"
            %dt Description
            %dd
              = assessment_target.description
