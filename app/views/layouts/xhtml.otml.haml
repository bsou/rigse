!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @xhtml.uuid}
  =ot_imports
  %objects
    %OTSystem
      =ot_bundles(:title => @xhtml.name)
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = Xhtml.display_name + ': ' + @xhtml.name
              %object{ :refid => ot_refid_for(@xhtml) }/
      %library
        =yield :layout