!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @inner_page.uuid}
  =ot_imports
  %objects
    %OTSystem
      =ot_bundles(:title => @inner_page.name)
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = InnerPage.display_name + ': ' + @inner_page.name
              %object{ :refid => ot_refid_for(@inner_page) }
      %library
        =yield :layout