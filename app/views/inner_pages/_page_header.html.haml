#inner_page_add_menu.dropdown
  %ul
    - Page::element_types.each do |type|
      %li= link_to_remote "#{type.display_name}", :update =>:inner_page_area, :url => url_for(:controller =>'inner_pages', :action => 'add_element', :class_name => type.name, :page_id => page.id),:html => {:class=>'action'}, :complete => mce_init_string
#actions_menu.dropdown
  %ul
    %li#copy_link copy (disabled)
    %li#paste_link= paste_link_for(Page::paste_acceptable_types,{:container_id => @container_id}) # see pages_helper.rb
    %li= run_link_for(page)
    %li= print_link_for(page)
    %li= toggle_all('elements')
    %li= link_to toggle_link_title('preview', 'edit'), preview_page_path(page)
    - if (page.changeable?(current_user))
      %li= link_to 'edit page details', edit_page_url(page)
      %li= link_to 'duplicate', duplicate_page_url(page)

- if (teacher_only? page)
  - view_class = "action_menu teacher_only"
- else
  - view_class = "action_menu"

      
%div{:id => dom_id_for(page,:item), :class =>view_class}
  .action_menu_header_left
    .padded_content
    .padded_content
      = "- #{page.name} -"
  .action_menu_header_right
    = dropdown_button "actions.png", :title => "actions for this page"
    - if (page.changeable?(current_user))
      = dropdown_button "add.png", :name=> 'inner_page_add', :content_id=> 'inner_page_add_menu', :title => 'add content to this page'
    - if (page.previous)
      = remote_link_button "previous_page.png", :url => set_page_inner_page_path(:page_id =>page.previous), :title => "go to previous page", :update => :inner_page_area
    - else
      .rollover= image_tag("previous_page_disabled.png")
    - if page.section
      - page.section.pages.each do |p|
        - if (p.id == page.id)
          = link_button "this_page.png", "#", :title => "you are here"
        - else
          = link_button "other_page.png", p, :title => "go to #{p.name}"
    - if (page.next)
      = remote_link_button "next_page.png", :url => set_page_inner_page_path(:page_id => page.next), :title => 'next page', :update => :inner_page_area
    - else
      .rollover= image_tag("next_page_disabled.png")
    - if (page.changeable?(current_user))
      - if (page.section)
        = delete_button_for(page, :redirect => url_for(page.section))
      - else
        = delete_button_for(page)
    - if (page.section)
      = link_button "up.png", page.section, :title => 'go to section'
