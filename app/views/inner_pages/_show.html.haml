%div{ :id => dom_id_for(inner_page, :item) }

%table{:width=>'100%',:valign=>'top'}
  %tr{:valign=>"top"}
    %td
      %div{ :id => dom_id_for(inner_page, :static_page_area)}
        = render :partial=> 'inner_pages/static_page', :locals=>{:page => inner_page.static_page, :inner_page => inner_page}
    %td
      %div{ :id => dom_id_for(inner_page, :inner_page_area)}
        = render :partial=> 'inner_pages/page', :locals=>{:sub_page => inner_page.sub_pages.first, :inner_page => inner_page}




     