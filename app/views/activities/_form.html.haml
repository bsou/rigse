- form_for(@activity) do |f|
  = f.error_messages
  %ul.menu
    %li.menu= "#{@activity.name} show/hide:"
    %li.menu= f.submit "Save"
  - field_set_tag 'Activity Name' do
    = f.text_field :name

  - field_set_tag 'Activity Description' do
    = f.text_area :description, :cols => 80, :rows => 5, :class => 'tinymce_textarea'
