- content_for(:content_header_left) do
  = page_entries_info @data_collectors
- content_for(:content_header_right) do
  - form_tag url_for(:action => "index", :page => session[:page] || 1 ), :method => 'get' do
    - content_tag :label do
      = text_field_tag :search, params[:search], :size => 30
    %input{ :type => "submit", :value => "Search"}

%p= will_paginate @data_collectors

- @data_collectors.each do |data_collector|
  %div{ :id => dom_id_for(data_collector, :item), :class => 'item' }
    = render :partial => "show", :locals => { :data_collector => data_collector }