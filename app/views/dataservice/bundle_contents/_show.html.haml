- options = { :omit_delete => true, :hide_componenent_name => true }
%div{:id => dom_id_for(dataservice_bundle_content, :item), :class => 'item'}
  %div{:id => dom_id_for(dataservice_bundle_content, :details), :class => 'content'}
    %ul.menu_h
      %li
        BundleLogger: 
        = link_to(dataservice_bundle_content.bundle_logger.id, dataservice_bundle_content.bundle_logger)
    = accordion_for(dataservice_bundle_content, "Session bundle:#{dataservice_bundle_content.id} (#{dataservice_bundle_content.position})",'body') do
      %pre= h(dataservice_bundle_content.body)
    = accordion_for(dataservice_bundle_content, "Otml: #{dataservice_bundle_content.otml.length / 1024}k", 'otml') do
      %pre= h(dataservice_bundle_content.otml)
    