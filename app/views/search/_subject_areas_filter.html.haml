- subject_areas = ExternalActivity.all_subject_areas
- subject_areas = subject_areas.merge(Activity.all_subject_areas)
- subject_areas = subject_areas.merge(Investigation.all_subject_areas)
- if subject_areas.size > 0
  %br
    .filterheader 
      Subject Areas
    .subject_areas_container.tablecell
      - subject_areas.each do |subject_area|
        .checkbox-label
          = check_box_tag 'subject_areas[]', subject_area,  @form_model.subject_areas.include?(subject_area),:id=>"subject_area_#{subject_area}", :class => 'check-box-left-margin'
          = label_tag 'subject_area_#{subject_area}', subject_area