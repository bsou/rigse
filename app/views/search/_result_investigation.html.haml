#investigations_bookmark
.materials_container.investigations
  .material_list_header
    ="#{t(:investigation).pluralize.titleize}"
  %p.border_top= page_entries_info materials, :model => Investigation.display_name
  = will_paginate materials, {:param_name => 'investigation_page', :params => {:controller => 'search', :action => 'index', :search_term => @search_term, :activity_page => @activity_page, :type => "inv" } }
  
  %table.result_material{ :cellpadding => 0, :cellspacing => 0 }
    %tr
      %td.material_list
        - materials.each do |investigation|
          .material_list_item{ :id => "search_investigation_#{investigation.id}", :style => ("border:none" if investigation == materials.last ) }
            = render :partial => 'result_item', :locals => { :material => investigation }
  %br
  = will_paginate materials, { :param_name => 'investigation_page', :params => { :controller => 'search', :action => 'index', :search_term => @search_term, :activity_page => @activity_page, :type => "inv" } }
  
