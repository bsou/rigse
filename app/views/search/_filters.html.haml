-probe_types = Probe::ProbeType.all.sort!{ |a,b| a.name.downcase <=> b.name.downcase };
-scientific_domains=RiGse::Domain.all.collect { |d| [(d.name.nil?) ? d.id.to_s : d.name,d.id] }
-grades=RiGse::GradeSpanExpectation.grade_spans
#filter_container{:style=>"overflow:hidden;"}
  #filtermask
  .showhidefilters
    %div{:id=>"oExpandCollapseText",:style=>"width:10px;float:left"}
      \-
    = link_to('Hide Filters', 'javascript: void(0);', :id=>"showHideFilters", :onclick => "showHideFilters(this)")
  %div{:style=>'clear:both'}
  #filters_wrapper.visible
    %table.filters.collapse_filters{:cellpadding=>0,:cellspacing=>0}

      %tr
        %td.sortbycolumn
          .filterheader
            Sort By
          %div
            = order_check_box(Search::Oldest, "Oldest", @form_model.sort_order)
          %div
            = order_check_box(Search::Newest, "Newest", @form_model.sort_order)
          %div
            = order_check_box(Search::Alphabetical, "Alphabetical", @form_model.sort_order)
          %div
            = order_check_box(Search::Popularity, "Popularity", @form_model.sort_order)
        %td.domaincolumn
          .filterheader
            Scientific Domain
          -scientific_domains.each do |domain|
            .tablecell
              = check_box_tag 'domain_id[]',domain[1], (@form_model.domain_id.include?(domain[1].to_s))?true:false, :id=>domain[0].gsub(/\s+/, "")
              = label_tag domain[0].gsub(/\s+/, ""), domain[0]
            /= check_box_tag :domain_id, domain, true
        %td.gradecolumn
          .filterheader
            Grade
          .tablecell
            = check_box_tag 'grade_span[]',"",(@form_model.grade_span.length > 0 && (@form_model.grade_span.select{|i| i.length > 0}).eql?(grades.map{|i| i.to_s})),:id=>'allgrades',:onclick=>"selectAllGreades(this,#{grades});"
            = label_tag 'allgrades', 'All Grades'
          -grades.each do |grade|

            .tablecell
              = check_box_tag 'grade_span[]', grade,(@form_model.grade_span.include?(grade.to_s))?true:false,:id=>grade,:onclick=>"selectAllGreades(this,#{grades});"
              = label_tag grade, grade
        %td.materialcolumn
          .filterheader
            Material
          .tablecell
            = @form_model.investigation_checkedstatus
            = check_box_tag 'material_types[]', 'Investigation', @form_model.material_types.include?('Investigation'),:id=>'investigation',:onclick=>"materialCheckOnClick(this);"
            = label_tag 'investigation', t(:investigation).titleize
          .tablecell
            = @form_model.activity_checkedstatus
            = check_box_tag 'material_types[]', 'Activity',@form_model.material_types.include?('activity'),:id=>'Activity',:onclick=>"materialCheckOnClick(this);"
            = label_tag 'activity','Activity'
          - if @form_model.include_external_activities?
            .tablecell
              = @form_model.external_activity_checkedstatus
              = check_box_tag 'material_types[]', 'ExternalActivity',@form_model.material_types.include?('ExternalActivity'),:id=>'external_activity',:onclick=>"materialCheckOnClick(this);"
              = label_tag 'external_activity', ExternalActivity.display_name
            .tablecell
              = @form_model.external_include_contributed_checkedstatus
              = check_box_tag 'include_contributed'
              = label_tag 'include_contributed', 'Include contributed activities?'
        %td.probescolumn
          - no_probes_req_selected = @form_model.probe_type.include?("0")
          .filterheader
            Sensors
          .noprobesrequired
            = check_box_tag 'probe[]', '0', no_probes_req_selected, :id=>'probe_0', :class=>'probe_no_check', :onclick=>'uncheckedallprobes(false);'
            = label_tag "probe_0","No Sensors Required",:class=>"probes_label"
          .probes_container.webkit_scrollbars

            %div
              Select&nbsp;
              %span#select_all_probes
                %a{:href => 'javascript: void(0);', :onclick=>"uncheckedallprobes(true);"}all
              %span
                |
              %span#select_none_probes
                %a{:href => 'javascript: void(0);', :onclick=>"uncheckedallprobes(false);"}none
            - probe_types.each do |probe|
              .tablecell
                = check_box_tag 'probe[]',"#{probe.id}",(@form_model.probe_type.include?(probe.id.to_s)),:id=>"probe_#{probe.id}",:class=>"probe_items",:onclick=>"uncheckednoprobe(this);"
                = label_tag "probe_#{probe.id}","#{probe.name}",:class=>"probes_label"
          #probes_overlay{ :style=> (no_probes_req_selected ? '' : 'display: none;') }
