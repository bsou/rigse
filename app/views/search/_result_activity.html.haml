#activities_bookmark
.materials_container.activities
  .material_list_header
    ="#{t(:activity).pluralize.titleize}"
  %p.border_top= page_entries_info materials, :model=>"Activity"
  = will_paginate @activities, :param_name => 'activity_page', :params => @form_model.params.merge(:type => 'act')

  %table.result_material{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td.material_list
        - materials.each do |activity|
          = render :partial => 'result_item', :locals => { :material => activity }
  %br
  = will_paginate @activities, :param_name => 'activity_page', :params => @form_model.params.merge(:type => 'act')
