%div{:id => dom_id_for(image_question, :item), :class => 'item'}
  %div{ :id => dom_id_for(image_question, :details), :class => 'content' }
    - saveable = saveable_for_learner(image_question, learner)
    - css_style = saveable.answered? ? 'answered' : 'not_answered'
    %item{:style => 'display: block;'}
      = image_question.prompt
    %item{:class => css_style, :style => 'display: block;'}
      - if saveable.answered? && saveable.answer
        %img{:src => dataservice_blob_raw_url(:id => saveable.answer.id, :token => saveable.answer.token)}
      - else
        = 'not answered'