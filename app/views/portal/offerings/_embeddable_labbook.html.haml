= accordion_for(embeddable, offering_details_labbook(offering, embeddable), nil, {:show_hide_text => "show responses"}) do
  - learners.sort_by{|learner| [learner.last_name, learner.first_name]}.each do |l|
    - saveable = saveable_for_learner(embeddable, l)
    %div{:id => dom_id_for(embeddable, :saveable, :learner, l.id), :class => "answered learner_response labbook"}
      %div{:class => "answered learner_response_name inline_block"}
        = h(l.name)
      %div{:class => "answered learner_response_content inline_block", :style => ""}
        = link_to 'Open labbook', '#', :onclick => "show_labbook('#{saveable.answer}'); return false;"
