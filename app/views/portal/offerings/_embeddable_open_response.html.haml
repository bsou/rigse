- feedback_options = {:show_button => true, :offering_id => offering.id, :question_number => question_number}
= accordion_for(embeddable, offering_details_open_response(offering, embeddable), nil, {:show_hide_text => "show responses", :feedback_options => feedback_options}) do
  - metadata = offering.metadata.for_embeddable embeddable
  - learners.sort_by{|learner| [learner.last_name, learner.first_name]}.each do |l|
    - saveable = saveable_for_learner(embeddable, l)
    - css_style = (saveable.submitted?) ? 'answered' : 'not_answered'
    %div{:id => dom_id_for(embeddable, :saveable, :learner, l.id), :class => "#{css_style} learner_response inline_block"}
      %div{:class => "#{css_style} learner_response_name inline_block"}
        = l.name
      %div{:class => "#{css_style} learner_response_content inline_block"}
        = sanitize (saveable.submitted_answer).gsub("\n", '<br/>')
        = feedback_link(embeddable, feedback_options, l.id, saveable, metadata)
