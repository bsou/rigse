%h1= @portal_resource_page.name

#description
	= @portal_resource_page.description

- if @portal_resource_page.has_attached_files?
	%h2 Attachments
	#attachments
		= render :partial => 'attached_files/attached_file', :collection => @portal_resource_page.attached_files
			
- if logged_in? && @portal_resource_page.editable_by?(current_user)
	%p= link_to 'Edit this page', edit_portal_resource_page_path(@portal_resource_page)
