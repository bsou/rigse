!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @biologica_world.uuid}
  =ot_imports
  %objects
    %OTSystem
      =ot_bundles(:title => @biologica_world.name)
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = BiologicaWorld.display_name + ': ' + @biologica_world.name
              %object{ :refid => ot_refid_for(@biologica_world) }
      %library
        =yield :layout