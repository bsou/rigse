<%= title "Reset Your Password", :h2 %>
<% form_for :user, :url => { :action => 'update_after_forgetting' } do |f| %>
  <%= f.error_messages %>
  <p>Please enter a new password and confirm it.</p>
  <fieldset>
    <legend>Update Password for <%= @user.login %></legend>
    <ol>
      <li>
        <%= f.label :password %>
        <%= f.password_field :password, :live => false  %>
      </li>
      <li>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, :live => false %>
      </li>
    </ol>
  </fieldset>
  <%= hidden_field_tag :reset_code, params[:reset_code] %>
  <div class="buttons">
    <%= f.submit "Submit" %>
  </div>
<% end %>
