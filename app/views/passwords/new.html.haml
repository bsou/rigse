= title "Forgot Your Password?"
- form_for @password do |f|
  %div{:id => dom_id_for(@password ,:form), :class =>"action_menu"}       
    .action_menu
      .action_menu_header_left
        .padded_content
          %h3 request an email reminder.
      .action_menu_header_right
        %ul.menu
          %li= f.submit "Submit"

    %fieldset
      %legend Enter Your Email Address
      %ul.quiet_list
        %li= f.label :email, "Email Address", :class=>"aligned"
        %li= f.text_field :email, :live => false, :class=>"aligned"
    = f.error_messages



