= render  :partial => 'shared/section_header', :locals => { :section => @section }

%ul#section_pages_list.sortable.menu
  - @section.pages.each do |page|
    = render :partial => 'page_list_item', :locals => {:page => page} 

= sortable_element :section_pages_list,:url=> {:action => 'sort_pages', :params => {:id => @section.id }}
