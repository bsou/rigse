- remote_form_for(section, :update => dom_id_for(section, :item), :before =>  "tinyMCE.triggerSave(true,true)") do |f|
  = edit_menu_for(section, f, :omit_cancel => true)
  = f.hidden_field :activity_id, :value =>activity.id
  - field_set_tag 'name' do
    = f.text_field :name
  - field_set_tag 'description' do
    = f.text_area :description, :class => 'tinymce_textarea'

= javascript_tag("$('section_name').activate();");
