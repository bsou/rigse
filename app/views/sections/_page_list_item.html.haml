%li{:id => dom_id_for(page, :container), :class => 'menu' }
  %div{ :id => dom_id_for(page, :item), :class => 'item' }
    %div.action_menu
      %div.action_menu_header_left
        =link_to name_for_component(page), page
      %div.action_menu_header_right   
        %ul.menu
          %li= link_to 'duplicate', duplicate_page_url(page)
          / %li= link_to 'edit', page        
          / %li.menu=toggle_more page        
          %li.menu=link_to_remote 'delete', :confirm => "delete page #{page.name}?", :url => { :controller => 'sections', :action => 'delete_page', :params => {:id=>page.section.id, :page_id => page.id}}, :html => {:class=>"delete"}
    %div{:id => dom_id_for(page, :details), :class => 'content', :style =>'display:block;'}
      = render  :partial => 'pages/preview', :locals => { :page => page }
