
<%= @step.name %> <br/>
<% form_for(@step) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :cols => 60 %>
 	<%= in_place_editor_field :xhtml, 'name' %>
  </p>
  

