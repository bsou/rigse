<% domid = "section_#{section.id}" %> 
<li class="sortable_section" id="<%= domid %>">
  <%= link_to section.name, section_url(section) %> 
  <%= link_to_remote 'delete', :url => {
    :action => 'delete_section', 
    :params => {:section_id => section.id}
    },
    :html => {:class=>"delete"} %>

  <ul>
    <% section.pages.each do | page | %>
      <%= page.name %>
      <%= page.description %>
    <% end %>   
  </ul>
