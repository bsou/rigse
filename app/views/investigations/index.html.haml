- content_for(:left_content_header) do
  %ul
    %li
      = link_to 'New investigation', new_investigation_path

- content_for(:right_content_header) do
  %ul
    %li
      - form_tag url_for(:action => "index", :page => session[:page] || 1 ), :method => 'get' do
        / - %w{LS ESS PS}.each do |domain|
        /   %label{:for => domain}
        /   = domain
        /   = check_box_tag domain, domain, true
        - content_tag :label do
          = text_field_tag :search, params[:search], :size => 30
        %input{ :type => "submit", :value => "Search"}

%h1 Investigation List

.paginator
  = will_paginate @paginated_objects
  - if @paginated_objects
    = page_entries_info @paginated_objects

.item_collection
  %ul.item_list
    - for investigation in @pages
      .item
        .menu
          %ul
            %li
              = investigation.id.to_s
            %li
              = investigation.title
            %li
              = link_to 'Show', investigation
            %li
              = link_to 'Edit', edit_investigation_path(investigation)
            %li
              = link_to 'Delete', :action => 'destroy', :id =>investigation.id
        .content
          = truncate(investigation.context, 120)
