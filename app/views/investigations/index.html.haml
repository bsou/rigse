- content_for(:content_header_left) do
  %p
    %ul.menu_h
      %li
        = link_to 'New investigation', new_investigation_path

- content_for(:content_header_right) do
  %p
    - form_tag url_for(:action => "index", :page => session[:page] || 1 ), :method => 'get' do
      - content_tag :label do
        = text_field_tag :search, params[:search], :size => 30
      %input{ :type => "submit", :value => "Search"}


%p
  %h3 Investigation List
.paginator
  = will_paginate @paginated_objects
  - if @paginated_objects
    = page_entries_info @paginated_objects

.item_collection
  %ol.quiet_list
    - for investigation in @pages
      %li.quiet_list.item
        %ul.menu
          %li.menu=link_to investigation.name, investigation            
          %li.menu=toggle_more investigation
          %li.menu=link_to 'Delete', investigation, :class => 'delete', :confirm => "Are you sure you want to delete ivestigation #{investigation.id}", :method => :delete 
          %div{:id => dom_id_for(investigation, :details), :class => 'content', :style =>'display:none;'}
            =investigation.description
