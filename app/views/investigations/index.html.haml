.action_menu
  .action_menu_header
    .action_menu_header_left
      - form_tag url_for(:action => "index", :page => session[:page] || 1 ), :method => 'get' do
        - content_tag :label do
          = text_field_tag :search, params[:search], :size => 30
        %input{ :type => "submit", :value => "Search"}
        include_drafts
        = check_box_tag 'include_drafts'                  
      - if @paginated_objects
        %p= page_entries_info @paginated_objects
      %p.paginator
        = will_paginate @paginated_objects
    .action_menu_header_right
      %ul.menu
        -unless current_user.anonymous?
          %li= link_to 'create investigation', new_investigation_path
        %li= toggle_all 'investigation descriptions'


.item_collection
  %ul.quiet_list
    - for investigation in @investigations    
      %div{ :id => dom_id_for(investigation, :item), :class => 'item' }
        %div.action_menu
          %div.action_menu_header_left   
            = link_to_container(investigation)
            %span.author
              = investigation.user.name
          %div.action_menu_header_right   
            %ul.menu
              %li= run_link_for(investigation)
              - unless(current_user.anonymous?)
                %li.menu=link_to 'duplicate', duplicate_investigation_url(investigation)
              %li.menu=link_to 'export (xml)', export_investigation_url(investigation)
              - if (investigation.changeable?(current_user))
                %li.menu=link_to 'delete', investigation, :class => 'delete', :confirm => "Are you sure you want to delete investigation #{investigation.id}", :method => :delete 
        %div{:id => dom_id_for(investigation, :details), :class => 'tiny'}
          %p=investigation.description
          - if params[:mine_only]
            %p
              %i 
                = updated_time_text(investigation)
