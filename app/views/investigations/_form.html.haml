- form_for(@investigation) do |f|
  = f.error_messages
  %ul.menu
    %li.menu= "#{@investigation.name} details:"
    %li.menu= f.submit "Save"
  - field_set_tag 'Investigation Name' do
    = f.text_field :name

  - field_set_tag 'Investigation Description' do
    = f.text_area :description, :cols => 80, :rows => 5, :class => 'tinymce_textarea'