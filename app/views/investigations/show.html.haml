.page_editor
  = render 	:partial => 'shared/investigation_side_menu', :locals => { :investigation => @investigation }
  = render 	:partial => 'shared/investigation_content_menu', :locals => { :investigation => @investigation } 
  - content_for :left_content_header do
    %ul
      %li=link_to "list investigations", investigations_url 
      %li=link_to 'edit', :action => 'edit'
      %li=link_to_remote 'add section', :url => {:action => 'add_section', :params => {:investigation_id => @investigation.id}}

  %ol#investigation_sections_list.sortable
    - @investigation.sections.each do |section|
      =render :partial => 'section_list_item', :locals => {:section => section}
      =sortable_element :investigation_sections_list, :handle=> 'sort-handle', :dropOnEmpty => true, :url=> {:action => 'sort_sections', :params => {:investigation_id => @investigation.id }}
      
  = link_to "list investigations", investigations_url
