- remote_form_for(drawing_tool, :update => dom_id_for(drawing_tool, :item), :before =>  "tinyMCE.triggerSave(true,true)") do |f|
  = edit_menu_for(drawing_tool, f)
  .content
    - field_set_tag 'name' do
      = f.text_field :name, :id => dom_id_for(drawing_tool, :item, :name_field)
    - field_set_tag 'content' do
      = f.text_area :content, :id => dom_id_for(drawing_tool, :item, :textarea),:rows => 40, :class => 'tinymce_textarea'
