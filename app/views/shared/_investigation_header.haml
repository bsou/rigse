%div{:id => dom_id_for(investigation,:item), :class =>"action_menu"}
  .action_menu_header_left
    .padded_content
      - if (investigation.changeable?(current_user))
        %h3= in_place_editor_field :investigation, 'name'
        .tiny=in_place_editor_field :investigation, 'description', {},{:rows=>3, :cols=>80}
      - else
        %h3= investigation.name
        .tiny= investigation.description
  .action_menu_header_right
    %ul.menu
      / %li= toggle_more(investigation,"sections_actions", "show/hide sections")
      %li= toggle_all 'section descriptions'
      %li= link_to 'duplicate', duplicate_investigation_url(investigation)
      / %li= edit_button_for(investigation, :complete => mce_init_string())
      - if (investigation.changeable?(current_user))
        %li= link_to_remote 'add section', :complete => mce_init_string(), :url => add_section_investigation_path(investigation),:html => {:class=>'action'}
        %li{:class => 'menu delete'}= delete_button_for(investigation)

