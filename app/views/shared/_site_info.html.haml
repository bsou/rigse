%p
  Database:
  - db_info = ActiveRecord::Base.configurations
  %br
  %small
    type:
    = db_info[::Rails.env]['adapter']
  %br
  %small
    name:
    = db_info[::Rails.env]['database']
  - if host = db_info[::Rails.env]['host']
    %br
    %small
      host:
      = host
%p
  Subdomains:
  %br
  %small
    = request.subdomains.join(', ')
%p
  RAILS_ROOT:
  %br
  %small
    = RAILS_ROOT
%p
  = display_repo_info
