- if current_visitor.anonymous? || @emulate_anonymous_user
  %div{:id => "test-header", :style => { alignContent: "left" } }

  - providers = []
  - Devise.omniauth_providers.each do |provider|
    - name = "#{provider.to_s.underscore}"
    - display_name = "#{provider.to_s.titleize}"
    - directPath = omniauth_authorize_path('user', provider, after_sign_in_path: params[:after_sign_in_path])
    - authCheckPath = auth_check_path(provider: provider.to_s, popup: 'true')
    - providers.push({ name: "#{name}", display_name: "#{display_name}", directPath: "#{directPath}", authCheckPath: "#{authCheckPath}" })

  %script{:type=>"text/javascript"}
    PortalPages.renderPageHeader( { oauthProviders: #{raw providers.to_json} }, "test-header");
- else
  #lead.project-header
    %h1{:class => theme_name}
      %a{ :href => root_path }= "#{APP_CONFIG[:site_name]}"
  .welcome-box
    %table{ :width => "100%" }
      %tbody
        %tr
          %td
            %b
              Welcome
              = "#{current_visitor.name}"
            %br
            - if current_settings && ((current_settings.help_type == 'external url') || (current_settings.help_type == 'help custom html'))
              = link_to 'Help | ', '/help', :target=>"_blank"
            = link_to 'My Preferences', preferences_user_path(current_visitor)
            - if @original_user != current_visitor
              |
              - switch_user_form_id = "switch_user_id_#{@original_user.id}"
              = link_to 'Switch Back','javascript: void(0);',:onclick => "$('#{switch_user_form_id}').submit();"
              = form_for @original_user, :url => switch_user_path(@original_user), :html => { :method => :put,:class=> "hidden" ,:id=> switch_user_form_id}  do |form|
                = hidden_field_tag 'user[id]', @original_user.id
                = hidden_field_tag 'commit', 'Switch'
            |
            = link_to 'Logout', destroy_user_session_path

= render :partial => 'shared/main_nav_trail'

