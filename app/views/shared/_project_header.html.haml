- if current_visitor.anonymous? || @emulate_anonymous_user
  %div{:id => "portal-pages-header", :style => { alignContent: "left" } }

  %script{:type=>"text/javascript"}
    PortalPages.renderPageHeader( { oauthProviders: Portal.oauthProviders }, "portal-pages-header");
- else
  #lead.project-header
    %h1{:class => theme_name}
      %a{ :href => root_path }= "#{APP_CONFIG[:site_name]}"
    %ul{:class => 'portal-pages-main-nav-contain'}
      %li{:class => 'portal-pages-main-nav-item'}
        = link_to 'Collections', '/collections'
      %li{:class => 'portal-pages-main-nav-item'}
        = link_to 'About', '/about', :class => 'portal-pages-main-nav-item__link'
      %li{:class => 'portal-pages-main-nav-item'}
        %a{:href => '/recent_activity', :class => 'portal-pages-main-nav-item__link button register'}
          %i{:class => 'icon-home'}
          Home
      %li{:class => 'portal-pages-main-nav-item'}
        %a{:href => '/users/sign_out', :class => 'portal-pages-main-nav-item__link button log-in'}
          %i{:class => 'icon-login'}
          Log Out
