.action_menu
  .action_menu_header_left
    %ul
      %li
        Pages:
  .action_menu_header_right
    %ul
      %li= link_to_remote 'add page', :url => add_page_section_path(section), :html => {:class=>'action'}

  .action_menu_left
    %ul.subsection_tabs
      - section.pages.each do |page|
        - if @page && @page.id == page.id
          %li.tab.active
            = link_to page.name, page_url(page), :class => "active"
        -else
          %li.tab
            = link_to page.name, page_url(page)
  .action_menu_right
  