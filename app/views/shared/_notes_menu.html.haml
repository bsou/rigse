- if authorable.teacher_note
  = function_link_button "teacher_note.png", "show_teacher_note();", :title => "view teacher note for this page"
- else
  - if (authorable.changeable?(current_user))
    = function_link_button "no_teacher_note.png", "how_teacher_note();", :title => "create a teacher note for this page"
  - else
    = link_button "no_teacher_note.png", "#", :title => "there is no teacher note for this page"

-if authorable.author_note
  = remote_link_button "author_note.png", url_for (:controller=>'pages', :action=>'show_author_note', :id=>authorable.id),  :title => "show the author note for this page"
- else
  - if (authorable.changeable?(current_user))
    = remote_link_button "no_author_note.png", url_for (:controller=>'pages', :action=>'show_author_note', :id=>authorable.id), :title => "create an author note for this page"
  - else
    = link_button "no_author_note.png", "#", :title => "there is no author note for this page"
