<h1>Editing image</h1>

<%= error_messages_for :image %>

<% if @image.image? %>
  <%= link_to image_tag(@image.public_filename(:thumb)), @image.public_filename %><br />
<% end %>

<% form_for(:image, :url => images_path, 
                      :html => { :multipart => true }) do |f| -%>
  <p>
    <label for="image">Upload an Image:</label>
    <%= f.file_field :uploaded_data %>
  </p>
  <p>
    <%= submit_tag 'Update' %>
  </p>
<% end -%>

<%= link_to 'Show', @image %> |
<%= link_to 'Back', images_path %>
